            <button type="submit" id="bot" class="btn btn-outline-dark" onclick="salvar()"> Login </button>
            <button class="btn btn-outline-dark" onclick="window.location.href='/cadastrouser'">Cadastrar novo usuario</button>
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <script>
                function salvar(){
                    let usuar = document.getElementById("user");
                    let pass = document.getElementById("password");
                    let usuario = {
                        user: usuar,
                        pass: pass
                    }

                    axios.get("http://localhost:8080/users/login",usuario).then(data => {
                        if(data.status(200)){
                            console.log("OKOK");
                        }
                    })
                }
            </script>
